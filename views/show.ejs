<%- include("partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header"><%=blog.title%></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%=blog.image%>">
            <div class="content">
                <span><%=blog.created.toDateString()%></span>
            </div>
            <div class="description">
                  <!--chaning = to - evaluates the code and then returns it instead of simply just returning it -->
                <p><%-blog.body%></p>
            </div>
            <a id = "edit" class = "ui orange basic button" href="<%=blog._id%>/edit">Edit</a>
            <form id="delete" action = "<%=blog._id%>?_method=DELETE" method = "POST">
                <button class = "ui red basic button">Delete</button>
            </form>
        </div>
    </div>
   
</div>

<%- include("partials/footer") %>